alias hgs='hg status'
alias hgp='hg push -b . --new-branch'
alias hgl='hg pull -u'
alias hgb='hg branch'
alias hgc='hg commit'
alias hgm='hg merge'
alias hglmc='hgl && hgm && hgc'
alias hgo='hg out'
alias hgso='hg status && hg out'
alias hgd='hg diff'
alias hga='hg add'
alias hgr='hg remove'
alias hgsd='hg status --rev "ancestor(default,.)"'
alias hgdd='hg diff -r "ancestor(default,.)"'
alias hgud='hg up default'
alias hgme='hg log -u daniel.nizri'
alias hgmee='hg log -u daniel.nizri | head -50'

alias  gpb='git rev-parse --abbrev-ref HEAD'                # print current branch name
alias   gl='git pull'                                       # pull current branch
alias   gc='git checkout'                                   # checkout branch <name>
alias  gcm='git checkout master'                            # checkout branch master
alias  gcb='git checkout -b'                                # checkout new branch <name>
alias  gpo='git push -u origin `gpb`'                       # push current branch to origin with tracking
alias   gs='git status'                                     # status of current branch
alias   go='git log origin/`gpb`..HEAD'                     # outgoing commits for current branch
alias  gso='gs && go'                                       # status and outgoing commits for current branch
alias  gos='gso'                                            # fix typos for gso
alias  gsm='git diff --name-only origin/master...`gpb`'     # modified files between current branch and ancestor master
alias   gd='git diff'                                       # diff of unstaged files
alias  gdc='git diff --cached'                              # diff of staged files
alias  gdm='git diff origin/master...`gpb`'                 # diff between current branch and ancestor master
alias   ga='git add --verbose --all'                        # add all new, modified and removed files to index
alias  gci='git commit --verbose'                           # commit staged files with <message>
alias   gp='git push'                                       # push outgoing commits for current branch
alias  grh='git reset --hard'                               # clean staged files
alias  gcu='git clean -f -d'                                # clean unstaged files
alias  guc='git reset --soft HEAD~1'                        # undo last commit
